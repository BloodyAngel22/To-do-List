@model TaskModel

<div class="text-center">
	<h4>Create new note</h4>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form class="form-horizontal" method="post">
	<div class="form-group">
		<label asp-for="Title" class="col-md-2 control-label">Title</label>
		<input asp-for="Title" class="form-control">
	</div>
	<div class="form-group">
		<label asp-for="Description" class="col-md-2 control-label">Description</label>
		<input asp-for="Description" class="form-control">
	</div>
	<br>
	<button type="submit" class="btn btn-primary" asp-action="Create">Create</button>	
	<a asp-action="Index" class="btn btn-default">Cancel</a></a>
</form>