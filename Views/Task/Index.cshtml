@model IEnumerable<TaskModel>

<div class="text-center">
	<h4>Your tasks</h4>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Date</th>
			<th colspan="4">IsDone</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var task in Model)
	{
		<tr>
			<td>@task.Title</td>
			<td>@task.Description</td>
			<td>@task.Date</td>
			@if (task.IsDone)
			{
				<td><span> ✅</span></td>
			}
			else
			{
				<td><span> ❌</span></td>
				<td><a class="btn btn-success" asp-action="MarkAsDone" asp-route-id="@task.Id">Done</a></td>
				<td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@task.Id">Edit</a></td>
			}
			<td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.Id" onclick="return confirm('Are you sure?')">Delete</a></td>
		</tr>
	}
	</tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Create new note</a>